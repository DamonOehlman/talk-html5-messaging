{
    "title": "HTML5 Messaging",
    "template": "reveal.js",
    "extras": [ "extension-hash", "theme-swiss" ],
    
    "sources": [
        "files/intro.md",
        "files/websockets.md",
        "files/eventsource.md",
        "files/isready.md"
    ],
    
    "includes": {
        "head": [
            "css/pres.style.css"
        ],
        
        "body": [
            "js/pres.js"
        ]
    },
    
    "theme": "dark",
    "plugins": {
        "code": {
            "style": "zenburn"
        }
    },
    
    "resources": [
        "css/pres.style.css <= resources/css/pres.style.css",
        "js/pres.js <= resources/js/pres.js"
    ]
}